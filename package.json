{
  "name": "wrappify-player",
  "version": "1.0.0",
  "description": "Wrappify player built with pure js and using the Wrappify API",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/webpack-dev-server --open",
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kavalcante/wrappify-player.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Jo√£o Cavalcante <contato@kavalcante.com> (https://kavalcante.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kavalcante/wrappify-player/issues"
  },
  "homepage": "https://github.com/kavalcante/wrappify-player#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "eslint": "^4.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "husky": "^0.11.9",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^3.2.0",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.0"
  },
  "dependencies": {
    "wrappify": "^2.0.2"
  }
}
